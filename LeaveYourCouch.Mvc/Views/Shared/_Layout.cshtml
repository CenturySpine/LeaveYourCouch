
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>L.Y.C</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")

</head>
<body >


    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark" id="mainnavbar">
        <span style="font-size: 1em; color: white; margin: 5px;">
            <i class="fas fa-couch"></i>
        </span>
        

        @Html.ActionLink(Resources.Resources.appname, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="\Home\Index">@Resources.Resources.nav_link_home</a>
                </li>
                @if (Request.IsAuthenticated)
                {
                    <li class="nav-item active">
                        <a class="nav-link" href="\Events\Index">@Resources.Resources.nav_link_events</a>

                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="\Relations\Index">Relations</a>

                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" href="\Home\About">@Resources.Resources.nav_link_about</a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" href="\Home\Contact">@Resources.Resources.nav_link_contact</a>

                </li>
                <li class="nav-item">

                </li>
            </ul>
            @*<div class="w-50"></div>*@
            <div class="nav">
                @Html.Partial("_LoginPartial")
            </div>



        </div>
    </nav>


<div class="container">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @RenderBody()
    <div id="mainfooter">
        <hr />
        <footer >
            <p>&copy; @DateTime.Now.Year - @Resources.Resources.appname</p>
        </footer>
    </div>
</div>

</body>
</html>
